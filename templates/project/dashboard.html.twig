{% extends "base.html.twig" %}

{% block title %}Dashboard - Task Manager{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">Dashboard</h1>
            <p class="text-muted">Welcome to your admin dashboard</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_task_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Task
            </a>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-0">Total Tasks</p>
                            <h3 class="mb-0">{{ totalTasks }}</h3>
                        </div>
                        <div class="text-primary" style="font-size: 2rem;">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-0">Completed</p>
                            <h3 class="mb-0">{{ completedTasks }}</h3>
                        </div>
                        <div class="text-success" style="font-size: 2rem;">
                            <i class="bi bi-check2-all"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-0">Total Projects</p>
                            <h3 class="mb-0">{{ projects|length }}</h3>
                        </div>
                        <div class="text-info" style="font-size: 2rem;">
                            <i class="bi bi-folder"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-0">Pending</p>
                            <h3 class="mb-0">{{ totalTasks - completedTasks }}</h3>
                        </div>
                        <div class="text-warning" style="font-size: 2rem;">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Projects -->
    <div class="row">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Recent Projects</h5>
                        <a href="{{ path('project_index') }}" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                </div>
                <div class="card-body">
                    {% if projects|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Description</th>
                                        <th>Start Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for project in projects|slice(0, 5) %}
                                        <tr>
                                            <td>
                                                <strong>{{ project.name }}</strong>
                                            </td>
                                            <td>
                                                {% if project.description %}
                                                    {{ project.description|slice(0, 50) }}{% if project.description|length > 50 %}...{% endif %}
                                                {% else %}
                                                    <span class="text-muted">No description</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if project.startDate %}
                                                    {{ project.startDate|date('M d, Y') }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if project.endDate and project.endDate < 'now'|date %}
                                                    <span class="badge bg-danger">Completed</span>
                                                {% else %}
                                                    <span class="badge bg-success">Active</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('project_show', {id: project.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> No projects yet. <a href="{{ path('project_index') }}">Create one</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}
