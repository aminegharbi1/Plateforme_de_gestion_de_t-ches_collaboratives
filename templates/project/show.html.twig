{% extends "base.html.twig" %}

{% block title %}{{ project.name }} - Task Manager{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Project Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div>
                <a href="{{ path('project_index') }}" class="text-decoration-none text-muted">
                    <i class="bi bi-arrow-left"></i> Back to Projects
                </a>
            </div>
            <h1 class="h2 mt-3">{{ project.name }}</h1>
            <p class="text-muted">{{ project.description }}</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <a href="#" class="btn btn-outline-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a href="#" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>

    <!-- Project Info Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <p class="text-muted mb-1">Start Date</p>
                    <h5 class="mb-0">
                        {% if project.startDate %}
                            {{ project.startDate|date('M d, Y') }}
                        {% else %}
                            <span class="text-muted">Not set</span>
                        {% endif %}
                    </h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <p class="text-muted mb-1">End Date</p>
                    <h5 class="mb-0">
                        {% if project.endDate %}
                            {{ project.endDate|date('M d, Y') }}
                        {% else %}
                            <span class="text-muted">Not set</span>
                        {% endif %}
                    </h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <p class="text-muted mb-1">Owner</p>
                    <h5 class="mb-0">{{ project.owner.email }}</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <p class="text-muted mb-1">Total Tasks</p>
                    <h5 class="mb-0">{{ project.tasks|length }}</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Project Tasks</h5>
                        <a href="{{ path('app_task_new') }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Task
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if project.tasks|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Task Name</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Due Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in project.tasks %}
                                        <tr>
                                            <td>
                                                <strong>{{ task.title }}</strong>
                                            </td>
                                            <td>
                                                {% if task.status == 'completed' %}
                                                    <span class="badge bg-success">Completed</span>
                                                {% elseif task.status == 'in_progress' %}
                                                    <span class="badge bg-info">In Progress</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Pending</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if task.priority == 'high' %}
                                                    <span class="badge bg-danger">High</span>
                                                {% elseif task.priority == 'medium' %}
                                                    <span class="badge bg-warning text-dark">Medium</span>
                                                {% else %}
                                                    <span class="badge bg-info">Low</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if task.dueDate %}
                                                    {{ task.dueDate|date('M d, Y') }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_task_show', {id: task.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> No tasks in this project yet. <a href="{{ path('app_task_new') }}">Add one</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}
