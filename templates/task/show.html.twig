{% extends 'base.html.twig' %}

{% block title %}{{ task.title }} - Task Manager{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h3 class="mb-2">{{ task.title }}</h3>
                            {% if task.status == 'done' %}
                                <span class="badge bg-success">Completed</span>
                            {% elseif task.status == 'in_progress' %}
                                <span class="badge bg-info">In Progress</span>
                            {% else %}
                                <span class="badge bg-secondary">To Do</span>
                            {% endif %}
                        </div>
                        {% if task.priority == 'high' %}
                            <span class="badge bg-danger">High Priority</span>
                        {% elseif task.priority == 'medium' %}
                            <span class="badge bg-warning text-dark">Medium Priority</span>
                        {% else %}
                            <span class="badge bg-info">Low Priority</span>
                        {% endif %}
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted">Description</h5>
                        <p>{{ task.description|default('No description provided') }}</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <small class="text-muted">Assigned To</small>
                                    <p class="mb-0"><strong>{{ task.assignedTo.email }}</strong></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <small class="text-muted">Project</small>
                                    <p class="mb-0"><strong>{{ task.project.name }}</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <small class="text-muted">Deadline</small>
                                    <p class="mb-0"><strong>{{ task.deadline ? task.deadline|date('M d, Y') : 'Not set' }}</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top">
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Tasks
                        </a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        {% if task.status != 'done' %}
                            <form method="POST" action="{{ path('app_task_complete', {'id': task.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ task.id) }}">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Mark as Done
                                </button>
                            </form>
                        {% endif %}
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this task? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                {{ include('task/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}
